---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Header } from "@/sections/Header";
import { Footer } from "@/sections/Footer";
import { ProjectsSection } from "@/sections/ProjectsSection";
---

<BaseLayout 
  title="Our Projects | Completed Garden Room Projects | Glenhaus Garden Rooms"
  description="View our completed garden room projects across Ayrshire and Scotland. Professional installations showcasing quality workmanship and expert craftsmanship."
  canonical="https://glenhausgardenroom.com/projects"
  keywords="garden room projects, completed projects ayrshire, garden room installations scotland"
>
  <div class="text-neutral-600 text-lg not-italic normal-nums font-medium accent-auto bg-[#323232] box-border caret-transparent block tracking-[normal] leading-[27px] list-outside list-disc min-h-full pointer-events-auto text-start indent-[0px] normal-case visible border-separate font-manrope">
    <Header client:load />
    <div class="pt-[80px] md:pt-[100px]">
      <ProjectsSection client:load />
    </div>
    <Footer client:load />
  </div>
</BaseLayout>
